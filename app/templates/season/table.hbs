<div class="row">
<div class="col-lg-12">
  <div class="panel panel-default standing-table">
    <div class="panel-heading text-center">
      Standing
    </div>
    <div class="panel-body">

      <!-- standing -->
      <table width="100%" class="table table-striped table-hover table-bordered">
        <thead>
          <th width="5%">Pos</th>
          <th width="30%">Team</th>
          <th class="text-right">Pld</th>
          <th class="text-right">W</th>
          <th class="text-right">D</th>
          <th class="text-right">L</th>
          <th class="text-right standing-table-pts">Pts</th>
          <th class="text-right">GF</th>
          <th class="text-right">GA</th>
          <th class="text-right">GD</th>
          <th class="text-right"><!-- separator --></th>
          <th class="text-right">HW</th>
          <th class="text-right">HD</th>
          <th class="text-right">HL</th>
          <th class="text-right">HGF</th>
          <th class="text-right">HGA</th>
          <th class="text-right">HGD</th>
          <th class="text-right"><!-- separator --></th>
          <th class="text-right">AW</th>
          <th class="text-right">AD</th>
          <th class="text-right">AL</th>
          <th class="text-right">AGF</th>
          <th class="text-right">AGA</th>
          <th class="text-right">AGD</th>
        </thead>
        <tbody>
        {{#each pos in model }}
          <tr>
            <td>{{pos.pos}}</td>
            <td class="text-left standing-table-team">
              <img class="team-logo" {{bind-attr src=pos.team_logo_url}} width="25px" height="25px" alt="" />
              <span>{{pos.team_name}}</span>
            </td>
            <td class="text-right">{{pos.pld}}</td>
            <td class="text-right">{{pos.win}}</td>
            <td class="text-right">{{pos.draw}}</td>
            <td class="text-right">{{pos.loss}}</td>
            <td class="text-right standing-table-pts">{{pos.pts}}</td>
            <td class="text-right">{{pos.gf}}</td>
            <td class="text-right">{{pos.ga}}</td>
            <td class="text-right">{{pos.gd}}</td>

            <td>&nbsp;</td>

            <td class="text-right">{{pos.h_win}}</td>
            <td class="text-right">{{pos.h_draw}}</td>
            <td class="text-right">{{pos.h_loss}}</td>
            <td class="text-right">{{pos.h_gf}}</td>
            <td class="text-right">{{pos.h_ga}}</td>
            <td class="text-right">{{pos.h_gd}}</td>

            <td>&nbsp;</td>

            <td class="text-right">{{pos.a_win}}</td>
            <td class="text-right">{{pos.a_draw}}</td>
            <td class="text-right">{{pos.a_loss}}</td>
            <td class="text-right">{{pos.a_gf}}</td>
            <td class="text-right">{{pos.a_ga}}</td>
            <td class="text-right">{{pos.a_gd}}</td>
          </tr>
        {{/each}}
        </tbody>
      </table>
      <!-- end -->

    </div>
  </div>
</div>
</div>
