<div class="row">
  <div class="col-lg-12">
    <h1 class="page-header">$Team Name</h1>
  </div>
  <!-- /.col-lg-12 -->
</div>
<div class="row">
  <div class="col-lg-6">
    <div class="panel panel-default standing-table">
      <div class="panel-heading text-center">
        Standing
      </div>
      <div class="panel-body">
        <table class="table table-bordered table-striped">
          <thead>
            <tr>
              <th>Game Day</th>
              <th>Home</th>
              <th>Score</th>
              <th>Away</th>
            </tr>
          </thead>
          <tbody>
            {{#each fixture in model.fixtures}}
            <tr>
              <td>{{ fixture.game_day }}</td>
              <td>
              {{ team-widget team_logo_url=fixture.home_team.logo_url team_name=fixture.home_team.name team_id=fixture.home_team.id }}
              </td>
              <td>
              {{ fixture.home_score }} : {{ fixture.away_score }}
              </td>
              <td>
              {{ team-widget team_logo_url=fixture.away_team.logo_url team_name=fixture.away_team.name team_id=fixture.away_team.id }}
              </td>
            </tr>
            {{/each}}
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
